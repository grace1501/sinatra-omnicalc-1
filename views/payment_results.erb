<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @annual_percentage_rate.to_fs(:percentage, {:precision => 4}) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @years_to_pay.to_i %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @principal.to_fs(:currency) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @result.to_fs(:currency) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
